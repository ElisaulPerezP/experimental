# .clang-format
---
Language:        Cpp
BasedOnStyle:    LLVM

# Sangrías y tabulaciones
IndentWidth:     4
TabWidth:        4
UseTab:          Never      # Siempre espacios, nunca tabs

# Llaves en nueva línea (Allman)
BreakBeforeBraces: Allman

# No permitir sentencias cortas en una sola línea
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine:        false
AllowShortFunctionsOnASingleLine:    InlineOnly

# Punteros pegados al tipo (int *ptr)
PointerAlignment: Left

# Alineaciones verticales sencillas
AlignConsecutiveAssignments: true

# Espacio antes de paréntesis sólo en estructuras de control
SpaceBeforeParens: ControlStatements

# Límite de ancho de línea
ColumnLimit:     100
